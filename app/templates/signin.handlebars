<div class="login-page">
  <h2>Sign In</h2>
  <form class="form-horizontal offset2 span6">
    <div class="control-group">
      <label class="control-label" for="inputEmail">Email</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="username"}}
      </div>
    </div>
    <div class="control-group">
      <label class="control-label" for="inputPassword">Password</label>
      <div class="controls">
        {{view Ember.TextField valueBinding="password" type="password"}}
      </div>
    </div>
    <div class="control-group">
      {{#if App.me.isError}}
        <span class="login-error">Error: Invalid username or password.</span><br />
      {{/if}}
      <div class="controls">
        <button type="submit" class="btn btn-primary" {{action "tryLogin"}}>Sign in</button>
      </div>
    </div>
  </form>
</div>